  #widget
    
    div(style="max-width: 800px; margin: 50px auto;")
      a(href="#widegetCBhook" js-modal).btn.btn-blue Online
      a(href="#widegetCBhookOffline" js-modal style="color: black").btn.btn-outline Offline
    
    // BTN
    // change here for offline/online states
    a(href="#widegetCBhook" js-modal).cb-btn.is-active
      .cb-btn__wrap
        +icon('ico-call')
      
    // MODALS
    // util class
    .modal-bg.is-active
    
    // CALLBACK WIDGET ONLINE
    .modal#widegetCBhook.is-active
      .modal__wrapper
        .modal__inner
          .modal__close(js-close-modal)
            +icon('ico-close')
          .cb
            .cb__left
              .cb__avatar
                img(src='img/manager.jpg' srcset='img/manager@2x.jpg 2x')
              .cb__name
                i.icon
                span Юлия
            .cb__agree
              .cb__checkbox
                input(type="checkbox" name="agree" id="agree" checked)
                label(for="agree")
                  span Согласен с <a href="#" target="_blank">положением</a>
            .cb__right
              .cb__slider
                // slide
                .cb__slide(data-slide="1").is-active
                  .cb__title Перезвоню <span>Вам</span> за 26 секунд!
                  form.cb__form(action="#" js-validate-1)
                    .cb__tel
                      i.icon.icon-lng-rus
                      input(type="tel" placeholder="+7 (___) ___-__-__" js-mask)
                    button.cb__cta(type="submit") Жду звонка
                // slide
                .cb__slide(data-slide="2")
                  .cb__title Мы уже звоним вам
                  .cb__timer(js-timer) 00:26:00
                //slide
                .cb__slide(data-slide="3")
                  .cb__title.cb__title--desktop Скажите, вам поступил вызов?
                  .cb__title.cb__title--mobile ПОСТУПИЛ ЛИ ВАМ ВЫЗОВ?
                  .cb__buttons
                    a(href="#" js-open-slide data-slide="4").btn.btn-blue Да
                    a(href="#" js-open-slide data-slide="5").btn.btn-outline Нет
                //slide
                .cb__slide(data-slide="4")
                  .cb__title Оцените звонок
                  .cb__rating(js-rating data-rating="3")
                    input(type="hidden" name="rating" value="3")
                    +icon('ico-star')
                    +icon('ico-star')
                    +icon('ico-star')
                    +icon('ico-star')
                    +icon('ico-star')
                              
                //slide
